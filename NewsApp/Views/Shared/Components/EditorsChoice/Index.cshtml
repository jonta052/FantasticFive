@model IEnumerable<NewsApp.Models.Article>

<table class="table">

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.Title.Length > 35)
                    {
                        <a title="@item.Title" class="text-link" style="text-decoration: none" asp-controller="Article" asp-action="Details" asp-route-id="@item.Id">@item.Title.Substring(0, 35)...</a>
                    }
                    else
                    {
                        <a class="text-link" style="text-decoration: none" asp-controller="Article" asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
                    }

                    <div class="text-sm-start text-muted d-flex gap-2 justify-content-start align-items-center me-2">
                        <div data-bs-toggle="tooltip" data-bs-title="Views">
                            <i class="bi bi-eye-fill "></i>
                            <span>@item.Views</span>
                        </div>
                    </div>
                </td>

                <td>
                    <a class="text-uppercase d-block" style="font:bold;text-decoration: none; font-family:'Times New Roman', Times, serif; color:white; padding:5px; border-radius:10px; margin-bottom:0px; background-color:darkred; text-align:center;" asp-controller="Home" asp-action="Index" asp-route-categoryName="@item.Category.Name"><span>@item.Category.Name</span></a>
                    <a class="zoom d-block" asp-action="Details" asp-controller="Article" asp-route-id="@item.Id"><img src="@item.ImageLink" alt="zoom_image" style="width:150px; height:100px; margin-top:5px" /></a>
                </td>


            </tr>
        }
    </tbody>
</table>
