<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active col-md-3 p-2 bg-light text-dark text-center">
                    <span class="p-2">Silver</span>
                    <span class="p-2">19.413</span>
                    <span class="bg-success">+0.28%</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">Brent Oil</span>
                    <span class="p-2">91.96</span>
                    <span class="bg-danger">-0.04%</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">Natural Gas</span>
                    <span class="p-2">7.836</span>
                    <span class="bg-danger">-0.38%</span>
                </div>

                <div class="carousel-item  col-md-3 p-2 bg-light text-dark text-center">
                    <span class="p-2">Apple</span>
                    <span class="p-2">154.48</span>
                    <span class="bg-success">+2.51</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">EUR/USD</span>
                    <span class="p-2">0.9984</span>
                    <span class="bg-danger">-0.34%</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">Netflix</span>
                    <span class="p-2">243.63</span>
                    <span class="bg-success">+1.46%</span>
                </div>

                <div class="carousel-item  col-md-3 p-2 bg-light text-dark text-center">
                    <span class="p-2">Gold (USD/oz)</span>
                    <span class="p-2">1672.6</span>
                    <span class="bg-danger">-0.65%</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">Nikkei 225</span>
                    <span class="p-2">27567.65</span>
                    <span class="bg-danger">-1.11%</span>
                    &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                    <span class="p-2">Tesla</span>
                    <span class="p-2">309.07</span>
                    <span class="bg-success">+1.89%</span>
                </div>
            </div>


            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NewsApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                  <p>Date/Time : <span id="datetime"></span></p>

                    <script>

                        setInterval(timer,1000);
                        function timer(){
                        var dt = new Date();
                            document.getElementById("datetime").innerHTML = (("0" + dt.getDate()).slice(-2)) + "." + (("0" + (dt.getMonth() + 1)).slice(-2)) + "." + (dt.getFullYear()) + " " + (("0" + dt.getHours()).slice(-2)) + ":" + (("0" + dt.getMinutes()).slice(-2)) + ":" + (("0" + dt.getSeconds()).slice(-2));
                        }
                    </script>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <!--////////////////// -->
        <!-- second navbar -->
        <div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark" aria-label="Fourth navbar example" style="margin-bottom:30px">
                <div class="container-fluid">
                    <a class="navbar-link navbar-brand text-warning" asp-controller="Article" asp-action="Index">News </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="World">World</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Sweden">Sweden</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Art">Art</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Sports">Sports</a>
                                @*<i class="fa-thin fa-futbol"></i>*@
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Health">Health</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Business">Business</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Article" asp-action="CategoryIndex" asp-route-categoryName="Culture">Culture</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search news">
                            <button class="btn btn-outline-warning" type="button">Search</button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
        <!--////////////////// -->
    </header>
    <div class="container">
            @RenderBody()
    </div>
    <hr />
   

    
     
    <footer@* class="border-top footer text-muted"*@>
        
        <div class="container body-content">
            <div class="row">
                <div class="col-4">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>

                <div class="col-4" style="text-align: center">
                    <a asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                </div>

                <div class="col-4" style="text-align: center">
                    <h5 style="text-align: center;font-weight: bold; display: inline-block">Follow Us&nbsp&nbsp&nbsp&nbsp<br /></h5>
                    <a class="fs-3 text-dark text-decoration-none" href="https://instagram.com">
                        <i class="fab fa-instagram-square"></i>
                    </a>
                    <a class="fs-3 text-dark text-decoration-none" href="https://twitter.com">
                        <i class="fab fa-twitter-square"></i>
                    </a>
                    <a class="fs-3 text-dark text-decoration-none" href="https://linkedin.com">
                        <i class="fa-brands fa-linkedin"></i>
                    </a>
                    <a class="fs-3 text-dark text-decoration-none" href="https://youtube.com">
                        <i class="fab fa-youtube-square"></i>
                    </a>
                    <a class="fs-3 text-dark text-decoration-none" href="https://facebook.com">
                        <i class="fab fa-facebook-square"></i>
                    </a>
                </div>

            </div>
        </div>

        <div style="text-align: center">
            &copy; 2022 - NewsApp.FantasticFive
        </div>

    </footer>



    <script src="https://kit.fontawesome.com/84f924f5fc.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
