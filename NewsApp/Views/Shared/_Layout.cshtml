                <div class="col-4" style="text-align: center">
                    <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                </div>

                <div class="col-4 text-light" style="text-align: center">
                    <h6 style="text-align: center; display: inline-block">Follow Us&nbsp&nbsp&nbsp&nbsp<br /></h6>
                    <a class="fs-3 text-decoration-none" style="color: white" href="https://instagram.com">
                        <i class="fa fa-instagram" style="font-size:20px"></i>&nbsp
                    </a>
                    <a class="fs-3 text-decoration-none" style="color: white" href="https://twitter.com">
                        <i class="fa fa-twitter" style="font-size:20px"></i>&nbsp
                    </a>
                    <a class="fs-3 text-decoration-none" style="color: white" href="https://youtube.com">
                        <i class="fa fa-youtube" style="font-size:20px"></i>&nbsp
                    </a>
                    <a class="fs-3 text-decoration-none" style="color: white" href="https://facebook.com">
                        <i class="fa fa-facebook" style="font-size:20px"></i>&nbsp
                    </a>
                    <a class="fs-3 text-decoration-none" style="color: white" href="https://linkedin.com">
                        <i class="fa-brands fa-linkedin" style="font-size:20px"></i>&nbsp
                    </a>
                </div>

            </div>
        </div>

        <div class="nav-link text-light" style="text-align: center">
            &copy; 2022 - newsfive.azurewebsites.net
        </div>
    </footer>



    <script src="https://kit.fontawesome.com/84f924f5fc.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {

            if("@weatherData.Date.Hour" > 22)
            {
                var day_night = "night";
            }

            else
            {
                var day_night = "day";
            }

            if ("@weatherData.Summary" == "clear sky") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/113.png`;
            }
            else if ("@weatherData.Summary" == "light intensity shower rain") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/353.png`;
            }
            else if ("@weatherData.Summary" == "moderate rain") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/299.png`;
            }
            else if ("@weatherData.Summary" == "overcast clouds") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/122.png`;
            }
            else if ("@weatherData.Summary" == "light rain") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/296.png`;
            }
            else if ("@weatherData.Summary" == "mist") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/143.png`;
            }
            else if ("@weatherData.Summary" == "broken clouds") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/116.png`;
            }
            else if ("@weatherData.Summary" == "scattered clouds") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/116.png`;
            }
             else if ("@weatherData.Summary" == "fog") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/248.png`;
            }
             else if ("@weatherData.Summary" == "few clouds") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/116.png`;
            }
            else if ("@weatherData.Summary" == "drizzle") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/263.png`;
            }
            else if ("@weatherData.Summary" == "light intensity drizzle") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/263.png`;
            }
            else if ("@weatherData.Summary" == "snow") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/332.png`;
            }
            else if ("@weatherData.Summary" == "light snow") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/179.png`;
            }
            else if ("@weatherData.Summary" == "heavy snow") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/338.png`;
            }
            else if ("@weatherData.Summary" == "heavy intensity shower rain") {
                document.getElementById('wicon').src = `/Image/weather/${day_night}/308.png`;
            }
            else {

                document.getElementById('wicon').src = "/Image/weather/under_construction.png";
            }
            
            $('[data-bs-toggle="popover"]').popover({
               
                sanitize: false,
                trigger: 'hover',
                html: true,
                content:
                    `<div class="flex-container" style="font-size: 18px;">
                          <div class="flex-child">
                                    <p style="margin-bottom:5px;font-size: 18px;">City:</p>
                            <p style="margin-bottom:5px">Summary:</p>
                            <p style="margin-bottom:5px">Temperature:&nbsp&nbsp</p>
                            <p style="margin-bottom:5px">Windspeed:</p>
                            <p style="margin-bottom:5px">Humidity:</p>
                          </div>
                          <div class="flex-child">
                                    <p style="margin-bottom:5px">@weatherData.Date.Hour</p>
                                    <p style="margin-bottom:5px">@weatherData.Summary</p>
                                    <p style="margin-bottom:5px">@weatherData.TemperatureC &#8451</p>
                                    <p style="margin-bottom:5px">@weatherData.WindSpeed m/s</p>
                                    <p style="margin-bottom:5px">@weatherData.Humidity %</p>
                          </div>
                     </div>`
            });

        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>