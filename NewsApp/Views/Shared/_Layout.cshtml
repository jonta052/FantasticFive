            </div>
        </div>

        <div class="nav-link text-light" style="text-align: center">
            &copy; 2022 - NewsApp.FantasticFive
        </div>
    </footer>



    <script src="https://kit.fontawesome.com/84f924f5fc.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {

            if ("@weatherData.Summary" == "clear sky") {
            document.getElementById('wicon').src = "/Image/weather/sun.png";
            }
            else if ("@weatherData.Summary" == "light intensity shower rain") {
                document.getElementById('wicon').src = "/Image/weather/rainy-day.png";
            }
            else if ("@weatherData.Summary" == "moderate rain") {
                document.getElementById('wicon').src = "/Image/weather/rainy-day.png";
            }
            else if ("@weatherData.Summary" == "overcast clouds") {
                document.getElementById('wicon').src = "/Image/weather/cloudy.png";
            }
            else if ("@weatherData.Summary" == "light rain") {
                document.getElementById('wicon').src = "/Image/weather/cloudy.png";
            }
            else if ("@weatherData.Summary" == "mist") {
                document.getElementById('wicon').src = "/Image/weather/cloudy.png";
            }
            else if ("@weatherData.Summary" == "broken clouds") {
                document.getElementById('wicon').src = "/Image/weather/cloudy.png";
            }
            else if ("@weatherData.Summary" == "scattered clouds") {
                document.getElementById('wicon').src = "/Image/weather/cloudy.png";
            }
             else if ("@weatherData.Summary" == "fog") {
                document.getElementById('wicon').src = "/Image/weather/fog.png";
            }
             else if ("@weatherData.Summary" == "few clouds") {
                document.getElementById('wicon').src = "/Image/weather/few-clouds.png";
            }
             else if ("@weatherData.Summary" == "drizzle") {

                document.getElementById('wicon').src = "/Image/weather/drizzle.webp";

            }
            else {

                document.getElementById('wicon').src = "/Image/weather/under_construction.png";

            }

            $('[data-bs-toggle="popover"]').popover({
                trigger: 'hover',
                html: true,
                content:
                    `<div class="flex-container">
                                                          <div class="flex-child">
                                                               <p>City:</p>
                                                               <p>Summary:</p>
                                                               <p>Temperature:&nbsp&nbsp</p>
                                                          </div>
                                                          <div class="flex-child">
                                                              <p>@weatherData.City</p>
                                                              <p>@weatherData.Summary</p>
                                                              <p>@weatherData.TemperatureC &#8451</p>
                                                          </div>
                     </div>`
            });

        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>