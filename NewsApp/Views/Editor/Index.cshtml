@model IEnumerable<NewsApp.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Manage Articles</h1>

<p>
    <a asp-action="Create" asp-controller="Article">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContentSummary)
            </th>

            
            <th>
                @Html.DisplayNameFor(model => model.Views)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EditorChoice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.Title.Length > 20)
                    {
                        @item.Title.Substring(0,20)
                        <span>...</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.Title)
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateStamp)
            </td>
            <td>
               
                    @if (item.ContentSummary.Length > 80)
                    {
                        @item.ContentSummary.Substring(0,80)
                        <span>...</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.ContentSummary)
                    }
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Views)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Likes.Count)

            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditorChoice)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Article" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Article" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-controller="Article" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="EditorChoice" asp-controller="Editor" asp-route-id="@item.Id">ToggleEditorChoice</a>
            </td>
        </tr>
}
    </tbody>
</table>
